<%- include('header'); -%>
  <div class="container">

      <div class="page-header text-center">
          <h1><span class="fa fa-camera-retro"></span> Profile Page</h1>
          <a class="btn btn-default btn-sm" href="/feed">Feed</a>
          <a href="/logout" class="btn btn-default btn-sm">Logout</a>
      </div>

      <div class="row">

          <!-- LOCAL INFORMATION -->
          <div class="col-sm-6">
              <div class="well">
                  <h3><img src="<%= user.profileImg %>" alt=""> Profile</h3>

                  <% if (user.local.email) { %>
                      <p>
                          <strong>id</strong>: <%= user._id %><br>
                          <strong>email</strong>: <%= user.local.email %><br>
                          <strong>password</strong>: <%= user.local.password %>
                      </p>

                      <a href="/unlink/local" class="btn btn-default">Unlink</a>
                  <% } else { %>
                      <a href="/connect/local" class="btn btn-default">Connect Local</a>
                  <% } %>
                  <!-- IMAGE UPLOAD -->
                </div>
                    <div class="postForm">
                      <h2>Add a post</h2>
                      <form action="/qpPost" enctype="multipart/form-data" method="post">
                        <input type="text" placeholder="Add hashtags!" name="caption" value="">
                        <input type="file" name="file-to-upload">
                        <input type="submit" value="Upload">
                      </form>
                    </div>
          </div>
          <div class="col-sm-6">
            <h3>Posts</h3>
            <ul class="profileUl">
            <% for(var i=0; i<posts.length; i++) {%>
              <li>
                <a href="/post/<%= posts[i]._id%>">
                  <img src="<%= posts[i].imgPath%>">
                </a>
                <span class="cap"><%- posts[i].caption %></span>
                <!-- <span><%= posts[i].likes %></span>
                <span><i class="fa fa-heart" aria-hidden="true"></i></span> -->
                <span><i class="fa fa-trash" aria-hidden="true"></i></span>
              </li>
            <% } %>
            </ul>

  </div>
<%- include('footer'); -%>
