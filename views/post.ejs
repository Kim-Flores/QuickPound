<%- include('header'); -%>
<div class="page-header text-center">
  <h1 class="feedTitle"><span class="fa fa-camera-retro"></span> Post</h1>
  <a class="btn btn-default btn-sm" href="/feed">Feed</a>
  <a class="btn btn-default btn-sm" href="/profile">Profile</a>
  <a href="/logout" class="btn btn-default btn-sm">Logout</a>
</div>
  <ul class='postUl'>
  <% for(var i=0; i<posts.length; i++) {%>
    <li>
      <img src="../<%= posts[i].imgPath%>">
      <%- posts[i].caption %>

      <!-- <span><i class="fa fa-heart" aria-hidden="true"></i></span>
      <span><i class="fa fa-trash" aria-hidden="true"></i></span> -->
    </li>

    <form class="" action="/comment/<%=posts[i]._id%>" method="post">
      <input placeholder="Place Comment!" type="text" name="comment" >
      <button class="btn btn-default btn-sm" type="submit" name="button">Submit</button>
    </form>

  <% } %>
  </ul>
  <div class="">
  </div>
<% for (var i=0; i<comments.length;i++){%>
   <p><span><%=comments[i].user%></span>
   <span class='postComment'><%=comments[i].comments%></span>

   <% if (user.local.email === posts[0].user ) { %>
     <span><i class="fa fa-trash" aria-hidden="true"></i></span>
     </p>
  <% } else { %>
  <% } %>

<%}%>
<%- include('footer'); -%>
